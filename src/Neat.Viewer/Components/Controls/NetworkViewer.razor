<div>
    <div>
        <button class="btn btn-outline-secondary btn-sm" @onclick="SwitchNetwork">Switch View (@NetworkMode)</button>
        <button class="btn btn-outline-secondary btn-sm" @onclick="SwitchForces">F@_forcesConfig</button>
    </div>
    <div>
        Fitness @(Math.Round(Genome.HistoricalFitness, 3)) /
        Synapses @(Genome.Synapses.Length) / 
        Generation @Genome.Generation /
        Age @Genome.Age
    </div>
</div>
<div class="network flex-grow-1 d-flex flex-column">
    <div style="display: none">
        <svg width="100%" height="100%" id="network-template"></svg>
    </div>
    <div id="network-area" class="flex-grow-1"></div>
</div>
